<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.CardView.Custom" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/shadow</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Custom" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.MaterialComponents.Button.UnelevatedButton.Custom" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>